{
	"compileOnSave": true,
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "../dist/esm",
		"esModuleInterop": true,
		"importHelpers": true,
		"lib": [ "dom", "es2018" ],
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"outDir": "../dist/cjs",
		"removeComments": false,
		"sourceMap": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"target": "es5",
		"types": []
	},
	"files": [
		"index.ts"
	]
}
